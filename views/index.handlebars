<div class="container">
  <div class="row">
    <div class="col sm12">
      <h1>Eat-Da-Burger!</h1>
      <img src="../public/assets/images/burger.png" width="300px">
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col sm6">
      <h3>Devour these burgers!</h3>
      <table>
        {{#each burgers}}
        <tr>
          <td>{{id}}</td>
          <td>{{burger_name}}</td> 
          <td><button>Devour!</button></td>
        </tr>
        {{/each}}
      </table>
    </div>
    <div class="col sm6">
      <h3>Burgers you've devoured!</h3>
      <table>
        {{#each burgers}}
        <tr>
          <td>{{id}}</td>
          <td>{{burger_name}}</td> 
          <td><button>Devour!</button></td>
        </tr>
        {{/each}}
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col s12">
        <h2>Add a Burger</h2>
        <form action="/" method="POST" class="create-form">
          <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" name="newburger">
          </div>
          <button type="submit">Add Burger</button>
        </form>
    </div>
  </div>
</div>
